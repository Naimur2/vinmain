{
    "expo": {
        "name": "WorldOfPlastics",
        "slug": "WorldOfPlastics",
        "scheme": "wop",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "userInterfaceStyle": "light",
        "splash": {
            "image": "./assets/images/splash.png",
            "resizeMode": "cover",
            "backgroundColor": "#05072F"
        },
        "assetBundlePatterns": ["**/*"],
        "ios": {
            "supportsTablet": true
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.worldOfPlastics.app"
        },
        "web": {
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you share them with us",
                    "cameraPermission": "The app accesses your camera to let you share them with us",
                    "microphonePermission": "The app accesses your microphone to let you share them with us"
                }
            ]
        ]
    }
}
